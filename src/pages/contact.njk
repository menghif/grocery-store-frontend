---
layout: base
permalink: /contact/
---

<div class="content" id="contactUs">
  <h2>Contact Us</h2>
  <form id="contact-form" action="https://httpbin.org/post" method="POST">
    <p>All fields are required</p>

    <div class="row">
      <div class="col">
        <label for="first-name">First Name</label>
        <input
          class="form-control"
          id="first-name"
          name="first-name"
          autocomplete="given-name"
          type="text"
          autofocus
          required
        />
      </div>
      <div class="col">
        <label for="last-name">Last Name</label>
        <input
          class="form-control"
          id="last-name"
          name="last-name"
          autocomplete="family-name"
          type="text"
          required
        />
      </div>
    </div>

    <div class="row">
      <div class="full-width">
        <label for="email">Email Address</label>
        <input
          class="form-control"
          id="email"
          name="email"
          autocomplete="email"
          type="email"
          required
        />
      </div>
    </div>

    <div class="row">
      <div class="full-width">
        <label for="address">Street Address</label>
        <input
          id="address"
          class="form-control"
          name="address"
          autocomplete="address-line1"
          type="text"
          required
        />
      </div>
    </div>

    <div class="row">
      <div class="col">
        <label for="city">City</label>
        <input
          id="city"
          class="form-control"
          name="city"
          type="text"
          autocomplete="address-level2"
          list="topCities"
          required
        />
        <datalist id="topCities">
          <option value="Toronto"></option>
          <option value="Montreal"></option>
          <option value="Vancouver"></option>
          <option value="Calgary"></option>
          <option value="Edmonton"></option>
          <option value="Ottawa"></option>
          <option value="Winnipeg"></option>
          <option value="Quebec City"></option>
        </datalist>
      </div>
      <div class="col">
        <label for="province">Province</label>
        <select
          id="province"
          class="form-control"
          name="province"
          autocomplete="address-level1"
        >
          <option>Alberta</option>
          <option>British Columbia</option>
          <option>Manitoba</option>
          <option>New Brunswick</option>
          <option>Newfoundland and Labrador</option>
          <option>Northwest Territories</option>
          <option>Nova Scotia</option>
          <option>Nunavut</option>
          <option selected>Ontario</option>
          <option>Prince Edward Island</option>
          <option>Quebec</option>
          <option>Saskatchewan</option>
          <option>Yukon</option>
        </select>
      </div>
    </div>

    <div class="row">
      <div class="full-width">
        <label for="postal-code">Postal Code</label>
        <input
          id="postal-code"
          class="form-control"
          name="postal-code"
          autocomplete="postal-code"
          type="text"
          placeholder="A1A 1A1"
          pattern="^[A-Za-z]\d[A-Za-z][ -]?\d[A-Za-z]\d$"
          required
        />
      </div>
    </div>

    <div class="">
      <div class="">
        <p>Please select one option below:</p>
        <div class="form-check">
          <label class="form-check-label" for="question">
            <input
              class="form-check-input"
              type="radio"
              name="type"
              id="question"
              value="question"
              checked
              onclick="addOrderNumber()"
            />
            Question
          </label>
        </div>
        <div class="form-check">
          <label class="form-check-label" for="comment">
            <input
              class="form-check-input"
              type="radio"
              name="type"
              id="comment"
              value="comment"
              onclick="addOrderNumber()"
            />
            Comment
          </label>
        </div>
        <div class="form-check">
          <label class="form-check-label" for="order-problem">
            <input
              class="form-check-input"
              type="radio"
              name="type"
              id="order-problem"
              value="order-problem"
              onclick="addOrderNumber()"
            />
            Order Problem
          </label>
        </div>
      </div>
    </div>
    <div class="row">
      <div id="orderNumberDiv" class="full-width" style="display: none">
        <label for="order-id">Order Number</label>
        <input
          id="order-id"
          name="order-id"
          class="form-control"
          type="tel"
          pattern="[0-9]{12}"
        />
        <small class="text-muted">
          Please enter your 12-digit order number
        </small>
      </div>
    </div>
    <script>
      function addOrderNumber() {
        var orderNumberDiv = document.querySelector("#orderNumberDiv");
        var orderNumberInput = document.querySelector("#order-id");

        // if Order Problem is selected, display Order Number input and set it as required
        if (document.querySelector("#order-problem").checked) {
          orderNumberDiv.style.display = "block";
          orderNumberInput.required = true;
        }
        // else hide Order Number input and set it as not required
        else {
          orderNumberDiv.style.display = "none";
          orderNumberInput.required = false;
        }
      }
    </script>

    <div class="row">
      <div class="full-width">
        <label for="message">Message</label>
        <textarea
          id="message"
          class="form-control"
          name="message"
          rows="8"
          required
        ></textarea>
      </div>
    </div>

    <div id="my-name">
      <input name="my-name" type="hidden" value="Francesco" />
    </div>

    <div class="submit-btn">
      <button type="submit" id="form-submit" name="submit" value="Submit">
        Submit
      </button>
    </div>
  </form>
</div>
